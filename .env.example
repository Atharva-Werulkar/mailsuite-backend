# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# JWT Configuration
JWT_SECRET=your-secret-key-min-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (for IMAP passwords)
# Must be exactly 32 characters
ENCRYPTION_KEY=your-32-character-encryption-key

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Worker Configuration
# Options: 'enhanced' (default), 'legacy', 'both'
# - enhanced: Phase 2 - Full email processing + bounce detection (RECOMMENDED)
# - legacy: Phase 1 - Bounce detection only
# - both: Run both processors simultaneously (for testing/migration)
PROCESSOR_MODE=enhanced

# Debug Options
DEBUG_BOUNCES=false
